<div class="">
		{{ form_start(form) }}
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="form-group w-25">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group w-25">
                {{ form_row(form.description) }}
            </div>
            <div class="form-group w-25">
                {{ form_row(form.githubLink) }}
            </div>
            <div class="form-group w-25">
                {{ form_row(form.image) }}
            </div>
            <div class="form-group w-25">
                {{ form_row(form.date) }}
            </div>
            <button class="btn btn-black">{{ button_label|default('Enregistrer les modifications') }}</button>
        </div>
		{{ form_end(form) }}
</div>