{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
    <h1 class="p-3 m-3 text-center">Connexion au portfolio</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="d-flex flex-column justify-content-center align-items-center">
        <div class="form-group w-25">
            <label for="username">Email :</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="E-mail"/>
        </div>
        <div class="form-group w-25">
            <label for="password">Mot de passe :</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe"/>
        </div>

        <button class="btn btn-dark m-3" type="submit">Se connecter</button>
    </form>
{% endblock %}
