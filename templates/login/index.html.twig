{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Connexion au portfolio</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <div class="form-group mx-sm-3">
            <label for="username">Email :</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="E-mail"/>
        </div>
        <div class="form-group mx-sm-3">
            <label for="password">Mot de passe :</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe"/>
        </div>

        <button class="btn btn-black" type="submit">Se connecter</button>
    </form>
</div>
{% endblock %}
